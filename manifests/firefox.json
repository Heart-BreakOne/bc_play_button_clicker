{
    "manifest_version": 3,
    "name": "Bracket City Play button Clicker",
    "version": "1.1",
    "description": "Automatically clicks the Play button on Bracket City",
    "content_scripts": [
        {
            "js": [
                "content_script.js"
            ],
            "matches": [
                "https://www.theatlantic.com/games/bracket-city/*"
            ]
        }
    ],
    "icons": {
        "128": "icon.png"
    },
    "homepage_url": "https://add0n.com/mobile-view.html",
    "browser_specific_settings": {
        "gecko": {
            "id": "heartbreak-bracketcity-playbuttonautoclicker@nonexistent"
        }
    }
}